{
  "name": "@nattui/prettier-config",
  "version": "0.0.8",
  "description": "A shareable Prettier configuration with opinionated defaults and useful plugins",
  "keywords": [
    "prettier",
    "config"
  ],
  "homepage": "https://github.com/nattui/prettier-config#readme",
  "bugs": {
    "url": "https://github.com/nattui/prettier-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nattui/prettier-config.git"
  },
  "license": "MIT",
  "author": "Natt Nguyen <hello@natt.sh> (https://natt.sh)",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "scripts": {
    "build": "tsdown",
    "check": "bun run check:format && bun run check:type",
    "check:fix": "bun run check:format:fix && bun run check:type:fix",
    "check:format": "prettier --check .",
    "check:format:fix": "prettier --write .",
    "check:type": "tsc --noEmit",
    "check:type:watch": "tsc --noEmit --watch",
    "dev": "tsdown --watch",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-sort-json": "^4.1.1",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
